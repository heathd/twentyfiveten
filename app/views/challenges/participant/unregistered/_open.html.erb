<%= render "challenges/participant/unregistered/header" %>

<p>Would you like to participate in this challenge?</p>

<% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
        <% @participant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for [@challenge, @participant], action: :create do |f| %>
  <%= label_tag :consent do %>
    <%= check_box_tag :consent %> I consent to this app processing my data
  <% end %>
  <%= f.submit "Participate", class: "button-primary"  %>
  <p>
    <%= link_to "Privacy policy", privacy_path, target: "_new" %>
  </p>
<% end %>
